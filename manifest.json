{
  "manifest_version": 3,
  "name": "17Lands Japanese Replacer",
  "version": "1.3",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "cardImageMap.json",
        "cardNameMap.json"
      ],
      "matches": [
        "https://www.17lands.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.17lands.com/deck_color_data"
      ],
      "js": [
        "style.js"
      ],
      "css": [
        "style.css"
      ]
    },
    {
      "matches": [
        "https://www.17lands.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
